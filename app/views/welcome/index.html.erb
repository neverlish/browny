	<div class="main-categories-all text-center">
		<div class="main-categories-box">
			<% @categories.each do |category| %>
				<%= link_to "/spots/#{category}", class: "main-category main-#{category}" do %>
					<span><%= category %></span>
				<% end %>
			<% end %>
		</div>
	</div>
</div>


