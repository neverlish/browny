<div class="row">
<% @posts.each do |post| %>
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="border: 1px solid gray; height: 450px;">
		<div style="border: 1px solid gray; width: 100%; height: 100%;">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 50%; border: 1px solid red;">
				<%=image_tag(post.picture) %>
				<%= post.picture%>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 50%; border: 1px solid blue;">
				<%= post.body %>
			</div>
		</div>
	</div>
<% end %>
</div>
