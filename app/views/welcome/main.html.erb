<div class="row">
<% @posts.each do |post| %>
	<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="border: 1px solid gray;">
		<div style="border: 1px solid gray; width: 100%; height: 200px; border-radius: 5px">
			<div style="border: 1px solid red; width: 40%; height: 95%; display:inline-block;">
			</div>
			<div style="display:inline-block; width: 55%; height: 95%; border: 1px solid blue;">
				<%= post.body %>
			</div>
		</div>
	</div>
<% end %>
</div>