<div class="row">
<% @posts.each do |post| %>
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="border: 1px solid gray; height: 150px;">
		<div style="border: 1px solid gray; width: 100%; height: 100%;">
			<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="height: 100%; border: 1px solid red;">
				<%=image_tag(post.picture) %>
			</div>
			<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9" style="height: 100%; border: 1px solid blue;">
				<%= post.body.html_safe %>
			</div>
		</div>
	</div>
<% end %>
</div>