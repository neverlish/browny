<%= simple_form_for(@city) do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' }, label: false, placeholder: '도시명' %>
  </div>
  <div class="form-group">
    <%= f.input :latitude, input_html: { class: 'form-control' }, label: false, placeholder: '위도' %>
  </div>
  <div class="form-group">
    <%= f.input :longitude, input_html: { class: 'form-control' }, label: false, placeholder: '경도' %>
  </div>
  <%= f.button :submit, class: 'btn btn-default'%>

<% end %>
