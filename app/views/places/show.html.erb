<h2><%= @place.name %></h2>
소속 도시 : <%= @place.city.name %><br>
위도 : <%= @place.latitude %><br>
경도 : <%= @place.longitude %><br>
picture : <%=image_tag(@place.picture)%>
<div class="text-right">
	<%= link_to 'Go to places', places_path %> | 
	<%= link_to 'Edit', edit_place_path(@place) %> | 
	<%= link_to 'Delete', place_path(@place), method: :delete %>
</div>
<hr>
<h4>Spots in <%= @place.name %></h4>
<% @place.spots.each do |spot| %>
	<div class="well">
		<strong><%= link_to "#{spot.name}", spot_path(spot) %></strong><br>
	</div>
<% end %>
<%= link_to "#{@place.name} spot 작성", new_place_spot_path(@place) %>

<script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyAPFLuE2iKv8B3egGibg3z9q8jQosNxD0w"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<div style='width: 800px;'>
  <div id="map" style='width: 1150px; height: 500px;'></div>
</div>
<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ 
		provider: {
		}, 
		internal: {
			id: 'map'
		}}, 
		function(){
		  markers = handler.addMarkers(<%=raw @hash.to_json %>);
		  handler.bounds.extendWith(markers);
		  handler.fitMapToBounds();
		  handler.getMap().setZoom(11);
	});
</script>