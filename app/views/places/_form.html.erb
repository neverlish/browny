<%= simple_form_for(@place) do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' }, label: false, placeholder: '장소명' %>
  </div>
  <div class="form-group">
    <%= f.collection_radio_buttons :city_id, City.all, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.number_field :latitude, input_html: { class: 'form-control' }, label: false, placeholder: '위도' %>
  </div>
  <div class="form-group">
    <%= f.number_field :longitude, input_html: { class: 'form-control' }, label: false, placeholder: '경도' %>
  </div>
  <%= f.button :submit, class: 'btn btn-default'%>
<% end %>
