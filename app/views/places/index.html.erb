<div class="container">
  <h4>Places</h4>
  
  <br><br>
  <div class="row">
    <% @places.each do |place| %>
      <div class="col-sm-4 col-md-3">
        <%= link_to place_path(place) do %>
          <div class="thumbnail thumbnail-image-box" style="background-image: url(<%= place.picture.url %>);">
      			<div class="caption">
          		<h3 style="text-align:center;"><%= place.name%></h3>
    				</div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= link_to 'Place 만들기', new_place_path, class: 'btn btn-default' %>
</div>