<div class="container">
  <h4>Places</h4>

  <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyAPFLuE2iKv8B3egGibg3z9q8jQosNxD0w"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
  <div style='width: 800px;'>
    <div id="map" style='width: 1150px; height: 500px;'></div>
  </div>
  <script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ 
      provider: {
      }, 
      internal: {
        id: 'map'
      }}, 
      function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(11);
        markers.getLabel()
    });
  </script>
</div>
  
  <br><br>
  <div class="row">
    <% @places.each do |place| %>
      <div class="col-sm-4 col-md-3">
        <%= link_to place_spots_path(place) do %>
          <div class="thumbnail thumbnail-image-box" style="background-image: url(<%= place.picture.url %>);">
      			<div class="caption">
          		<h3 style="text-align:center; font-size: 30px;"><%= place.name%></h3>
    				</div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= link_to 'Place 만들기', new_place_path, class: 'btn btn-default' %>
</div>