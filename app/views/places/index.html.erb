<div class="container">
  <h4>Places</h4>
  <%= link_to 'Place 만들기', new_place_path, class: 'btn btn-default' %>
  <br><br>
  <div class="row">
    <% @places.each do |place| %>
      <div class="col-sm-4 col-md-3">
        <div class="thumbnail">
        	<%= link_to place_path(place) do %>
          		<img src="..." alt="...">
          			<div class="caption">
            		<h3><%= place.name%></h3>
    				</div>
    		  <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>