<%= render "category" %>
<h4>
  Spots in
  <% if @place_id %>
    <%= link_to "#{Place.find(@place_id).name}", place_path(@place_id) if @place_id %>
  <% else %>
    All places
  <% end %>
</h4>
<div class="row">
	<% @spots.each do |spot| %>
    <div class="col-sm-6 col-md-6">
      <%= link_to spot_path(spot) do %>
        <div class="thumbnail thumbnail-image-box" style="background-image: url(<%= spot.picture %>);">
    			<div class="caption">
        		<h3><%= spot.name%></h3>
  				</div>
        </div>
      <% end %>
    </div>
	<% end %>
</div>
<% if @place_id %>
  <%= link_to 'Spot 만들기', new_place_spot_path(@place_id), class: 'btn btn-default' %>
<% else %>
<%= link_to 'Spot 만들기', new_spot_path, class: 'btn btn-default' %>
<% end %>