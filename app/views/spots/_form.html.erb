<%= simple_form_for(@spot) do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' }, label: false, placeholder: 'Name' %>
  </div>
  <div class="form-group">
    <%= f.collection_radio_buttons :place_id, Place.all, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.collection_radio_buttons :category, Spot.categories, :first, :first %>
  </div>
  <div class="form-group">
    <%= f.collection_radio_buttons :status, Spot.statuses, :first, :first %>
  </div>
  <div class="form-group">
    <%= f.file_field :picture %>
    <%= f.hidden_field :picture_cache %>
  </div>
  <%= f.button :submit, class: 'btn btn-default'%>
<% end %>
