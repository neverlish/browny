<h4>
  Spots in
  <% if @place_id %>
    <%= link_to "#{Place.find(@place_id).name}", place_path(@place_id) if @place_id %>
  <% else %>
    All places
  <% end %>
  | <%= params[:category] %>
</h4>

<div class="row">
	<% @category_spots.each do |spot| %>
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <%= link_to spot_path(spot) do %>
          <div class="thumbnail thumbnail-image-box" style="background-image: url(<%= spot.picture.url %>);">
      			<div class="caption">
          		<h3><%= spot.name%></h3>
    				</div>
          </div>
        <% end %>
     </div>
	<% end %>
</div>