<% if current_user.is_spotlike?(spot) %>
    <%= link_to image_tag("heart", size: "15x15"), spot_like_path(spot), method: "post" %>
<% else %>
    <%= link_to "좋아요", spot_like_path(spot), method: "post" %>
<% end %>
<%= spot.likes.size%>명이 좋아합니다.

<div class="text-right">
	<%= link_to '지도에서 보기', spot_map_path(spot), class: 'btn btn-default' %>
	<!--<%= link_to 'Go to spots list', spots_path %> | 
	<%= link_to 'Edit', edit_spot_path(spot) %> | 
	<%= link_to 'Delete', spot_path(spot), method: :delete %>-->
</div>

<hr>

<% spot.posts.all.order('created_at desc').each do |post| %>
	<div style="border: 1px solid gray" >
		<div>
			<div class="mu-10 mb-10 ml-20">
				<strong style="font-size: 15px">포스트   </strong><d style="font-size: 10px">Post</d> 
			</div>
			<hr style="padding: 0; margin:0">
			<strong><%=post.title%></strong><br>
			<div class="text-right">
				<%= image_tag(current_user.image, size: '20x20', style:'border-radius:3px;vertical-align:top;') if current_user.image %>
				<strong><%= post.user.name %></strong>
				<%=post.user.created_at.strftime("20%y/%m/%d")%>
			</div>
			<%= post.body.html_safe %><br>
			<hr>
			<%= post.likes.size%>명이 좋아합니다.<br>
			<% if current_user.is_postlike?(post) %>
			    <%= link_to "좋아요 취소", spot_post_like_path(@spot, post), method: "post" %>
			<% else %>
			    <%= link_to "좋아요", spot_post_like_path(@spot, post), method: "post" %>
			<% end %>
		</div>
		<% if post.user == current_user %>
			<div class="text-right">
				<%= link_to 'Read detail', spot_post_path(spot, post) %> | 
				<%= link_to 'Edit', edit_spot_post_path(spot, post) %> | 
				<%= link_to 'Delete', spot_post_path(spot, post), method: :delete %>
			</div>
		<% end %>
	</div>
	<div style="margin-bottom: 10px;"></div>
	<hr>
<% end %>

